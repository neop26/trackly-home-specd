{
  "name": "trackly-testing-engine",
  "version": "1.0.0",
  "description": "E2E Testing Engine for Trackly Home - Automated testing from checklist specifications",
  "scripts": {
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:chrome": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:safari": "playwright test --project=webkit",
    "test:mobile": "playwright test --project='Mobile Chrome' --project='Mobile Safari'",
    "test:smoke": "playwright test --grep @smoke",
    "test:critical": "playwright test --grep @critical",
    "test:regression": "playwright test --grep @regression",
    "test:feature": "playwright test --grep",
    "parse:checklist": "ts-node src/parsers/run-parser.ts",
    "generate:tests": "ts-node src/parsers/generate-tests.ts",
    "report": "playwright show-report",
    "report:open": "open reports/html/index.html",
    "lint": "eslint src --ext .ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@playwright/test": "^1.50.0",
    "@supabase/supabase-js": "^2.93.3",
    "dotenv": "^16.4.0",
    "gray-matter": "^4.0.3",
    "marked": "^12.0.0",
    "yaml": "^2.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
